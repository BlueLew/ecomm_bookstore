<div class="c-section">
  <h1>Checkout</h1>
  <h2>Book: <%= @book.title %> by <%= @book.author.name %></h2>
  <h3>Your card will be charged $<%= @book.price %>.</h3>

  <%= form_for [@book, @sale], html: { id: "payment-form" } do |f| %>
    <div id="card-errors"><%= @card_errors %></div>
    <%= f.hidden_field :stripe_token %>
    <div id="card-element">
      <!-- inject Stripe card form -->
    </div>
    <%= f.submit %>
  <% end %>
</div>
