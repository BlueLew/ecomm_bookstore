<div class="c-section">
  <h2 class="c-title c-title--large">Browse Our Books</h2>
</div>
<div class="c-section">
  <% @books.each do |book| %>
    <div class="c-card u-margin-bottom-small">
      <div class="c-section">
        <h2 class="c-title"><%= book.title %></h2>
        <% @authors.each do |author| %>
        <h3 class="c-title c-title--tiny">by <%= author.name%></h3>
        <% end %>
        <h4 class="c-title c-title--tiny">$<%= book.price %></h4>
        <%= link_to "More Info", book_path(book), class: "c-button c-button--small c-button--focal"%>
      </div>
    </div>
  <% end %>
</div>
